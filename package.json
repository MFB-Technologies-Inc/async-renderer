{
  "name": "@mfb/async-renderer",
  "version": "1.2.1",
  "description": "Utility for rendering async data in React",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "rimraf ./lib && tsc --project tsconfig.prod.json && npm run build:css",
    "build:css": "sass --no-source-map src/components:lib/components",
    "lint": "eslint ./src/",
    "generate-pipelines": "generate-pipeline -d ./pipeline-data.json -p util -t pr",
    "test:azure": "jest --reporters=jest-standard-reporter --coverage",
    "test": "jest --watch",
    "fix-formatting": "prettier --write --config ../../prettier.config.js ./src/",
    "check-formatting": "prettier --check --config ../../prettier.config.js ./src/"
  },
  "author": "MFB Technologies, Inc.",
  "devDependencies": {
    "@types/node": "^14.17.6",
    "@types/jest": "^27.4.0",
    "jest": "27.1.0",
    "ts-jest": "^27.1.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.5.4",
    "@types/react": "^17.0.15",
    "@mfb/pipeline-scripts": "workspace:~1.1.0",
    "@testing-library/react": "^12.0.0",
    "jest-standard-reporter": "^2.0.0",
    "identity-obj-proxy": "^3.0.0",
    "sass": "^1.35.2",
    "eslint": "^8.3.0",
    "@typescript-eslint/parser": "^5.9.1",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "prettier": "^2.4",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "@rushstack/eslint-config": "~2.5.1"
  },
  "peerDependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  }
}
